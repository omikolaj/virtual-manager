<script id="dealership-template" type="text/x-handlebars-template">

  {{#each this}}
    <div class="col-lg-4 col-md-4 col-sm-4 mt-5 text-center">
      <i class="fa fa-cubes fa-2x" aria-hidden="true"></i>
      <h1> {{name}} </h1>
        <p>We have {{vehicles.length}} vehicles</p>
      <a href='/dealerships/{{id}}' class="btn btn-outline btn-xl js-scroll-trigger btn-block">Visit</a>
    </div>
  {{/each}}
  <div class="modal fade" id="new-dealership" tabindex="-1" role="dialog" aria-labelledby="newDealershipModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newDealershipModal">New message</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
         <form onsubmit="createDealership()" accept-charset="UTF-8">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group mt-2 justify-content-md-center">
            <label class="col-form-label" for="dealership[name]">Name</label>
            <div class="row justify-content-md-center">
              <div class="col-sm-9">
                <input class="form-control" type="text" name="dealership[name]" id="dealership[name]">
              </div>
            </div>
          </div>
          <div class="form-group mt-2 justify-content-md-center">
            <label class="col-form-label" for="dealership[city]">City</label>
            <div class="row justify-content-md-center">
              <div class="col-sm-9">
                <input class="form-control" type="text" name="dealership[city]" id="dealership[city]">
              </div>
            </div>
          </div>      
          <div class="row justify-content-md-center">
            <div class="col-lg-8 col-md-8">
              <input type="submit" name="commit" value="" class="btn btn-outline btn-xl js-scroll-trigger btn-block top-buffer nobackground" data-disable-with="">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>

</script>

