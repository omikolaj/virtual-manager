<div class="container">
  <%= render partial: "shared/flash_messages", flash: flash %>
</div>
<h2 class="text-center">Vehicle's Info</h2>
<div class="container">
<div class="jumbotron jumbotron-country jumbotron-background no-padding">
<div class="col-lg-12 col-md-12">

<table class="table text-center">
  <tbody>
    <tr>
      <th scope="row">Make</th>
      <td><%=@vehicle.make %></td>
    </tr>
    <tr>
      <th scope="row">Model</th>
      <td><%=@vehicle.model %></td>
    </tr>
    <tr>
      <th scope="row">Year</th>
      <td><%=@vehicle.year %></td>
    </tr>
    <tr>
      <th scope="row">Status</th>
      <td><%=@vehicle.dealership_vehicle.is_lot_ready == true ? "Lot ready" : "In repair" %></td>
    </tr>
    <tr>
      <th scope="row">Price</th>
      <td><%=@vehicle.dealership_vehicle.price %></td>
    </tr>
    <tr>
      <th scope="row">Buyer</th>
      <td><%=@vehicle.dealership_vehicle.buyer %></td>
    </tr>
    <tr>
      <th scope="row"></th>
      <td></td>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>
<div class="container">
<div class="row justify-content-center">
<div class="col-lg-3 col-md-4 col-sm-6 mt-2">
<%= link_to "Back to the Lot", dealership_vehicles_path(@vehicle.dealership.id), class:"btn btn-outline btn-xl js-scroll-trigger btn-block" %>
</div>
<div class="col-lg-3 col-md-4 mt-2 col-sm-6">
<%= link_to "Edit Vehicle", edit_dealership_vehicle_path(@vehicle.dealership.id, @vehicle.id), class:"btn btn-outline btn-xl js-scroll-trigger btn-block" %>
</div>
<div class="col-lg-3 col-md-4 col-sm-6 mt-2">

<%= form_tag("/vehicles/{{id}}", method: 'delete')%>
<%= submit_tag "Delete", class: "btn btn-outline btn-xl js-scroll-trigger btn-block nobackground" %>
</div>
</div>
</div>
</div>