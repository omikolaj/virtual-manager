<div class="col-lg-4 col-md-4 top-buffer">
  <%= image_tag("car-logo.png", size: '92x92')%>
  <p><%= vehicle.year %></p>
  <p><%= vehicle.make %> - <%= vehicle.model %></p>
    <div class="row justify-content-md-center">
      <div class="col-lg-6 col-md-6">
        <%= link_to "Edit", edit_dealership_vehicle_path(@dealership.id, vehicle.id), class: "btn btn-outline btn-xl js-scroll-trigger btn-block"%><br>
      </div>
      <div class="col-lg-6 col-md-6">
        <%= link_to "View", dealership_vehicle_path(@dealership.id, vehicle.id), id: "js-view-vehicle" ,class: "btn btn-outline btn-xl js-scroll-trigger btn-block"%><br>
      </div>
      <div class="col-lg-12 col-md-12">
        <%= link_to "Delete", vehicle, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline btn-xl js-scroll-trigger btn-block" %>
      </div>
    </div>
</div>