<div class="container">
  <div class="row justify-content-center">
    <h1 class="text-center">New vehicle?</h1>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-lg-4 col-md-4 top-buffer">
      <%= link_to "Add New Vehicle", new_dealership_vehicle_path(@dealership.id), class: "btn btn-outline btn-xl js-scroll-trigger btn-block"%>
    </div>
    <div class="col-lg-4 col-md-4 top-buffer">
      <%= link_to "Back to #{@dealership.name}", dealership_path(@dealership.id), class: "btn btn-outline btn-xl js-scroll-trigger btn-block nobackground"%>
    </div>
  </div>
</div>

<div class="jumbotron jumbotron-country text-center nobackground">
  <div class="container">
    <div class="container">
      <%= render partial: "shared/flash_messages", flash: flash %>
    </div>
    <div class="row">
      <%= render @vehicles %>
    </div>
  </div>
</div>

